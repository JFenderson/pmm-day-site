mysql_database---
create table person(
id int not null auto_increment primary key,
firstName varchar(30),
lastName varchar(30), 
email varchar(50), 
phoneNumber int, 
_created datetime default current_timestamp
);

create table photos(
id int not null auto_increment primary key,
url varchar(75) not null,
_created datetime default current_timestamp
);

